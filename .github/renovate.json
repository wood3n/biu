{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:monorepos", ":semanticCommits", "helpers:pinGitHubActionDigests"],
  "baseBranches": ["master"],
  "timezone": "Asia/Shanghai",
  "schedule": ["every weekend"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "rebaseWhen": "behind-base-branch",
  "prConcurrentLimit": 3,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on sunday"]
  },
  "npm": {
    "rangeStrategy": "bump"
  },
  "postUpdateOptions": ["pnpmDedupe"],
  "platformAutomerge": false,
  "automerge": false,
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false,
      "groupName": "devDependencies (minor/patch)",
      "labels": ["deps:dev"]
    },
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "groupName": "npm major updates",
      "labels": ["deps:major", "breaking-change"],
      "stabilityDays": 3,
      "automerge": false
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "labels": ["deps:actions"],
      "automerge": false,
      "enabled": false
    },
    {
      "matchPackagePatterns": ["^@rsbuild/"],
      "groupName": "rsbuild monorepo",
      "labels": ["deps:rsbuild"],
      "automerge": false
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "@types packages",
      "automerge": false,
      "labels": ["deps:types"]
    },
    {
      "matchPackagePatterns": ["^eslint", "^@eslint", "^@eslint-react"],
      "groupName": "eslint ecosystem",
      "automerge": false,
      "labels": ["deps:eslint"]
    },
    {
      "matchPackagePatterns": ["^electron"],
      "groupName": "electron ecosystem",
      "automerge": false,
      "stabilityDays": 7,
      "schedule": ["before 6am on monday"],
      "labels": ["deps:electron"]
    },
    {
      "matchPackagePatterns": ["^react", "^@types/react"],
      "groupName": "react ecosystem",
      "automerge": false,
      "stabilityDays": 3,
      "labels": ["deps:react"],
      "enabled": false
    },
    {
      "matchPackagePatterns": [
        "^prettier",
        "^stylelint",
        "^commitlint",
        "^husky",
        "^lint-staged",
        "^vitest",
        "^knip",
        "^changelogen",
        "^rimraf",
        "^chokidar",
        "^rollup"
      ],
      "groupName": "code quality and build tools",
      "labels": ["deps:quality"],
      "automerge": false
    },
    {
      "description": "Disable Node updates in package.json engines",
      "matchPackageNames": ["node"],
      "matchManagers": ["npm"],
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "description": "Disable Node updates from .nvmrc",
      "matchManagers": ["nvm"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["^@heroui/", "^@remixicon/", "^@tanstack/", "^overlayscrollbars", "^react-colorful"],
      "groupName": "UI libraries",
      "labels": ["deps:ui"],
      "automerge": false
    },
    {
      "matchPackagePatterns": [
        "^tailwindcss",
        "^@tailwindcss",
        "^postcss",
        "^prettier-plugin-tailwindcss",
        "^tailwind-merge"
      ],
      "groupName": "tailwindcss ecosystem",
      "labels": ["deps:tailwind"],
      "automerge": false
    },
    {
      "matchPackagePatterns": [
        "^axios$",
        "^zustand$",
        "^immer$",
        "^zod$",
        "^moment",
        "^classnames$",
        "^cookie$",
        "^es-toolkit$",
        "^filesize$",
        "^spark-md5$",
        "^jsencrypt$",
        "^font-list$",
        "^ahooks$",
        "^react-hook-form$",
        "^@hookform/",
        "^qrcode.react"
      ],
      "groupName": "utils and state management",
      "labels": ["deps:utils"],
      "automerge": false
    },
    {
      "description": "Disable updates for selected packages",
      "matchPackageNames": ["fluent-ffmpeg", "framer-motion"],
      "enabled": false
    }
  ]
}
