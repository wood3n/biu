{
  "$schema": "https://unpkg.com/release-it@19.0.5/schema/release-it.json",
  "git": {
    "requireBranch": "master",
    "requireCleanWorkDir": true,
    "tagName": "v${version}",
    "commitMessage": "chore: release v${version}",
    "push": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "angular",
        "types": [
